@model List<RealEstate_Dapper_Ul.Dtos.ProductDtos.ResultProductAdvertListWithCategoryByEmployeeDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/EstateAgent/Views/LayoutEstateAgent/Index.cshtml";
    int count = 0;
}


<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yayınladığınız İlan Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">ilan Başiliği</th>
                                @* <th scope="col">Şehir</th>
                                <th scope="col">İlçe</th> *@
                                <th scope="col">Kategori</th>
                                <th scope="col">Fıyat</th>
                                <th scope="col">Tür</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                                <th scope="col">Sitede Gör</th>
                                @* <th scope="col">Günün Fırsatı</th> *@

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;

                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.title</td>
                                   @*  <td>@item.city</td>
                                    <td>@item.district</td> *@
                                    <td>@item.categoryName</td>
                                    <td>@item.price</td>
                                    <td>@item.type</td>
                                    <td><a href="/Product/DeleteProduct/@item.productID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Product/UpdateProduct/@item.productID" class="btn btn-outline-success">Güncelle</a></td>
                                    @*  <td><a href="/Product/ProductDetail/@item.productID" class="btn btn-outline-primary">sitede gor</a></td> *@
                                    <td><a href="/Default/Index/" class="btn btn-outline-primary">sitede gor</a></td>
                                    @* <td>
                                        @if (item.dealOfTheDay == true)
                                        {
                                            <a href="/Product/ProductDealOfTheDayStatusChangeToFalse/@item.productID" class="btn btn-outline-secondary">Pasif Yap</a>
                                        }
                                        @if (item.dealOfTheDay == false)
                                        {
                                            <a href="/Product/ProductDealOfTheDayStatusChangeToTrue/@item.productID" class="btn btn-outline-warning">Aktif Yap</a>
                                        }
                                    </td> *@

                                </tr>

                            }

                        </tbody>
                    </table>
                    <a href="/Product/CreateProduct/" class="btn btn-outline-info">Yeni Ilan Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>

